<?php
// Fungsi untuk menghitung diskon
function hitungDiskon($namaPaket, $hargaAsli) {
    $persenDiskon = 0;
    
    // Cek apakah paket mendapat diskon
    if (stripos($namaPaket, 'Perahu Sungai Cipelang') !== false) {
        $persenDiskon = 5; // Diskon 5% untuk Paket Perahu Sungai Cipelang
    }
    
    // Hitung diskon
    $nilaiDiskon = ($hargaAsli * $persenDiskon) / 100;
    $hargaSetelahDiskon = $hargaAsli - $nilaiDiskon;
    
    return [
        'harga_asli' => $hargaAsli,
        'persen_diskon' => $persenDiskon,
        'nilai_diskon' => $nilaiDiskon,
        'harga_setelah_diskon' => $hargaSetelahDiskon,
        'ada_diskon' => $persenDiskon > 0
    ];
}

// Fungsi untuk format rupiah
function formatRupiah($angka) {
    return 'Rp ' . number_format($angka, 0, ',', '.');
}

// Fungsi untuk mendapatkan badge diskon HTML
function getBadgeDiskon($persenDiskon) {
    if ($persenDiskon > 0) {
        return '<span class="absolute top-2 right-2 bg-red-500 text-white px-3 py-1 rounded-full text-sm font-bold z-10">
                    Diskon ' . $persenDiskon . '%
                </span>';
    }
    return '';
}

// Fungsi untuk mendapatkan HTML harga dengan diskon
function getHtmlHarga($dataDiskon) {
    if ($dataDiskon['ada_diskon']) {
        return '<div>
                    <p class="text-gray-400 line-through text-lg">' . formatRupiah($dataDiskon['harga_asli']) . '</p>
                    <p class="text-3xl font-bold text-red-600">' . formatRupiah($dataDiskon['harga_setelah_diskon']) . '</p>
                    <p class="text-sm text-green-600 font-semibold">Hemat ' . formatRupiah($dataDiskon['nilai_diskon']) . '!</p>
                </div>';
    } else {
        return '<p class="text-3xl font-bold text-blue-600">' . formatRupiah($dataDiskon['harga_asli']) . '</p>';
    }
}

